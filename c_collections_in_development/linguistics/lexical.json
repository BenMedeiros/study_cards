  "entries": [
    {
      "term": "Lexical semantics",
      "study": "Linguistics / Semantics",
      "definition": "The study of word meanings, sense distinctions, and relationships among words.",
      "compressed_definition": "Study of word meaning",
      "links": [
        "Sense",
        "Synonymy",
        "Polysemy",
        "Hyponym"
      ],
      "examples": [
        "How many meanings does the word 'run' have?",
        "Are 'big' and 'large' interchangeable in all contexts?"
      ]
    },
    {
      "term": "Sense",
      "study": "Lexical semantics",
      "definition": "A distinct meaning associated with a word form in a particular context or usage.",
      "compressed_definition": "Specific word meaning",
      "links": [
        "Polysemy",
        "Homonymy",
        "Synonymy",
        "Hyponym"
      ],
      "external_links": [
        "word form",
        "context",
        "usage"
      ],
      "examples": [
        "paper (material) vs paper (newspaper)",
        "bank (financial institution) vs bank (river edge)"
      ]
    },
    {
      "term": "Lexeme",
      "study": "Lexical semantics",
      "definition": "An abstract lexical unit that groups together the inflected forms that belong to the same vocabulary item.",
      "compressed_definition": "Abstract lexical unit",
      "links": [
        "Lemma"
      ],
      "external_links": [
        "dictionary entry"
      ],
      "examples": [
        "RUN: run / runs / ran / running",
        "GO: go / goes / went / going"
      ]
    },
    {
      "term": "Lemma",
      "study": "Lexical semantics",
      "definition": "The canonical dictionary form used to represent a lexeme.",
      "compressed_definition": "Dictionary headword",
      "links": [
        "Lexeme"
      ],
      "external_links": [
        "canonical form",
        "corpus"
      ],
      "examples": [
        "ran and running are listed under the lemma run",
        "better and best are listed under the lemma good"
      ]
    },
    {
      "term": "Synonymy",
      "study": "Lexical semantics",
      "definition": "A relation between expressions whose meanings are very similar in a given context.",
      "compressed_definition": "Similarity of meaning",
      "links": [
        "Sense",
        "Near-synonymy"
      ],
      "external_links": [
        "register"
      ],
      "examples": [
        "sofa ~ couch",
        "buy ~ purchase"
      ]
    },
    {
      "term": "Near-synonymy",
      "study": "Lexical semantics",
      "definition": "Partial synonymy where expressions overlap in meaning but differ in connotation, register, or typical usage.",
      "compressed_definition": "Partial similarity",
      "links": [
        "Synonymy"
      ],
      "external_links": [
        "connotation",
        "collocation"
      ],
      "examples": [
        "child ~ kid",
        "slim ~ skinny"
      ]
    },
    {
      "term": "Polysemy",
      "study": "Lexical semantics",
      "definition": "A single word form having multiple related senses.",
      "compressed_definition": "Multiple related meanings",
      "links": [
        "Sense"
      ],
      "external_links": [
        "meaning extension"
      ],
      "examples": [
        "run (move quickly / manage / operate)",
        "head (body part / leader / top)"
      ]
    },
    {
      "term": "Homonymy",
      "study": "Lexical semantics",
      "definition": "The relationship between expressions that share a form but have unrelated meanings.",
      "compressed_definition": "Same form, unrelated meanings",
      "links": [
        "Sense"
      ],
      "external_links": [
        "lexical ambiguity",
        "etymology"
      ],
      "examples": [
        "bat (animal) vs bat (sports equipment)"
      ]
    },
    {
      "term": "Hypernym",
      "study": "Lexical semantics",
      "definition": "A more general term whose meaning subsumes the meaning of more specific terms.",
      "compressed_definition": "General parent term",
      "links": [
        "Hyponym"
      ],
      "external_links": [
        "semantic hierarchy",
        "taxonomic relation"
      ],
      "examples": [
        "vehicle → car, bicycle",
        "cook → boil, fry, bake"
      ]
    },
    {
      "term": "Hyponym",
      "study": "Lexical semantics",
      "definition": "A more specific term whose meaning is included within the meaning of a more general term.",
      "compressed_definition": "More specific category member",
      "links": [
        "Hypernym",
        "Sense",
        "Troponymy"
      ],
      "external_links": [
        "semantic entailment"
      ],
      "examples": [
        "boil is a hyponym of cook",
        "murder is a hyponym of kill"
      ]
    },
    {
      "term": "Troponymy",
      "study": "Lexical semantics",
      "definition": "A verb-specific subtype of hyponymy where the more specific verb encodes the manner of the more general action.",
      "compressed_definition": "Verb hyponymy with manner",
      "links": [
        "Hyponym"
      ],
      "external_links": [
        "event structure"
      ],
      "examples": [
        "whisper → speak",
        "sprint → run"
      ]
    },
    {
      "term": "Lexical gap",
      "study": "Lexical semantics",
      "definition": "A concept for which a language lacks a conventional single-word expression.",
      "compressed_definition": "Missing word for a concept",
      "external_links": [
        "lexicalization",
        "paraphrase",
        "multiword expression",
        "cross-linguistic comparison"
      ],
      "examples": [
        "English lacks a single word for 'older sibling'",
        "Some languages lack a single word for 'the day after tomorrow'"
      ]
    },
    {
      "term": "Predicate",
      "study": "Syntax / Semantics",
      "definition": "The part of a clause that expresses a property, relation, or action attributed to one or more arguments.",
      "compressed_definition": "What is asserted",
      "links": [
        "Clause",
        "Predicate phrase"
      ],
      "external_links": [
        "argument",
        "property",
        "relation",
        "event",
        "valency"
      ],
      "examples": [
        "runs",
        "is tall",
        "gave a gift to Kim"
      ]
    },
    {
      "term": "Clause",
      "study": "Syntax",
      "definition": "A grammatical unit organized around a predicate and its arguments.",
      "compressed_definition": "Predicate with arguments",
      "links": [
