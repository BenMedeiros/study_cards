{
  "grammarPoint": "Xも",
  "meanings": [
    {
      "meaning": "Additive — also / too / as well",
      "useCases": [
        {
          "ja": "私も",
          "en": "me too / I also",
          "focus": "N+も",
          "refs": ["私"]
        },
        {
          "ja": "水も",
          "en": "water too / also water",
          "focus": "N+も",
          "refs": ["水"]
        }
      ]
    },
    {
      "meaning": "Inclusive ‘Even’ / Surprising Inclusion",
      "notes": [
        "Context and intonation determine whether the nuance is simple addition ('also') or surprising inclusion ('even')."
      ],
      "useCases": [
        {
          "ja": "子供も分かる",
          "en": "Even a child understands / A child also understands",
          "focus": "N+もV",
          "refs": ["子供", "分かる"]
        },
        {
          "ja": "彼も知らない",
          "en": "Even he doesn’t know / He also doesn’t know",
          "focus": "N+もV-neg",
          "refs": ["彼", "知る"]
        },
        {
          "ja": "一円もない",
          "en": "I don’t have even one yen",
          "focus": "quantity+もV-neg",
          "refs": ["一円", "ある"],
          "notes": ["Requires negative predicate"]
        }
      ]
    },
    {
      "meaning": "Quantity / Degree Emphasis — as much/many as / emotional emphasis",
      "useCases": [
        {
          "ja": "三時間も",
          "en": "for as long as three hours",
          "focus": "quantity+も",
          "refs": ["三時間"]
        },
        {
          "ja": "五回も",
          "en": "as many as five times",
          "focus": "quantity+も",
          "refs": ["五回"]
        },
        {
          "ja": "百人も来た",
          "en": "As many as 100 people came",
          "focus": "quantity+もV",
          "refs": ["百人", "来る"]
        },
        {
          "ja": "千円もした",
          "en": "It cost as much as 1000 yen",
          "focus": "quantity+もV",
          "refs": ["千円", "する"]
        }
      ]
    },
    {
      "meaning": "Negative Emphasis — not even",
      "notes": [
        "Requires a negative predicate."
      ],
      "useCases": [
        {
          "ja": "一回も行かない",
          "en": "not even go once",
          "focus": "quantity+もV-neg",
          "refs": ["一回", "行く"],
          "notes": ["Requires negative predicate"]
        },
        {
          "ja": "少しも寒くない",
          "en": "not even a little cold",
          "focus": "extent+もAdj-neg",
          "refs": ["少し", "寒い"],
          "notes": ["Requires negative predicate"]
        },
        {
          "ja": "少しも静かじゃない",
          "en": "not even a little quiet",
          "focus": "extent+もな-adj-neg",
          "refs": ["少し", "静か"],
          "notes": ["Requires negative predicate"]
        },
        {
          "ja": "一度も行ったことがない",
          "en": "have never gone even once",
          "focus": "一度もVたことがない",
          "refs": ["一度", "行く"],
          "notes": ["Requires negative predicate"]
        }
      ]
    },
    {
      "meaning": "Question Word Extremes — anyone / no one / nothing (polarity dependent)",
      "useCases": [
        {
          "ja": "誰でも来られる",
          "en": "Anyone can come",
          "focus": "Q+でもV",
          "refs": ["誰", "来る"]
        },
        {
          "ja": "誰もいない",
          "en": "No one is here",
          "focus": "Q+もV-neg",
          "refs": ["誰", "いる"],
          "notes": ["Requires negative predicate"]
        },
        {
          "ja": "何もない",
          "en": "There is nothing",
          "focus": "Q+もV-neg",
          "refs": ["何", "ある"],
          "notes": ["Requires negative predicate"]
        },
        {
          "ja": "何も言わない",
          "en": "Say nothing",
          "focus": "Q+もV-neg",
          "refs": ["何", "言う"],
          "notes": ["Requires negative predicate"]
        }
      ]
    }
  ]
}
