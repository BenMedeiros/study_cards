{
  "metadata": {
    "name": "Linguistics: Synonymy Glossary",
    "description": "Glossary of linguistic terms related to synonymy, semantics, and related topics.",
    "version": 4
  },
  "entries": [
    {
      "term": "Linguistics",
      "primary_field": "Linguistics",
      "subfield": null,
      "definition": "Systematic scientific study of human language structure, use, and function",
      "compressed_definition": "Scientific study of language"
    },
    {
      "term": "Semantics",
      "primary_field": "Linguistics",
      "subfield": "Semantics",
      "definition": "Study of conventionally encoded meaning in linguistic expressions",
      "compressed_definition": "Study of encoded meaning"
    },
    {
      "term": "Meaning",
      "primary_field": "Linguistics",
      "subfield": "Semantics",
      "definition": "The idea or content encoded in linguistic forms, independent of context",
      "compressed_definition": "Concept expressed by language"
    },
    {
      "term": "Lexical semantics",
      "primary_field": "Linguistics",
      "subfield": "Semantics",
      "definition": "Study of individual word meanings, sense distinctions, and relations among words",
      "compressed_definition": "Study of word meanings"
    },
    {
      "term": "Sense",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "A distinct meaning or interpretation associated with a particular word form",
      "compressed_definition": "Specific word meaning"
    },
    {
      "term": "Reference",
      "primary_field": "Linguistics",
      "subfield": "Semantics",
      "definition": "The relation between linguistic expressions and the actual objects, events, or concepts they denote",
      "compressed_definition": "Word-world relation"
    },
    {
      "term": "Denotation",
      "primary_field": "Linguistics",
      "subfield": "Semantics",
      "definition": "The primary, literal meaning of a word or expression, as opposed to implied meaning",
      "compressed_definition": "Literal word meaning"
    },
    {
      "term": "Connotation",
      "primary_field": "Linguistics",
      "subfield": "Semantics",
      "definition": "The secondary, associated, or emotional meaning carried by a word beyond its literal denotation",
      "compressed_definition": "Associated or implied meaning"
    },
    {
      "term": "Pragmatics",
      "primary_field": "Linguistics",
      "subfield": "Pragmatics",
      "definition": "Study of how context, speaker intentions, and situational factors influence interpretation of language",
      "compressed_definition": "Context-dependent meaning study"
    },
    {
      "term": "Context",
      "primary_field": "Linguistics",
      "subfield": "Pragmatics",
      "definition": "All situational, social, and linguistic factors surrounding an utterance that influence its interpretation",
      "compressed_definition": "Situational factors affecting meaning"
    },
    {
      "term": "Usage",
      "primary_field": "Linguistics",
      "subfield": "Pragmatics",
      "definition": "The patterns and norms of how speakers actually employ words and expressions in communication",
      "compressed_definition": "Actual language use"
    },
    {
      "term": "Synonymy",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "The relation between words that share similar meaning",
      "compressed_definition": "Similarity between word meanings"
    },
    {
      "term": "Near-synonymy",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "Partial synonymy where words differ in context or connotation",
      "compressed_definition": "Partially similar word meanings"
    },
    {
      "term": "Synonymic differentiation",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "Analysis of fine distinctions among near-synonyms",
      "compressed_definition": "Distinguishing similar word meanings"
    },
    {
      "term": "Polysemy",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "A single word having multiple related meanings",
      "compressed_definition": "Multiple related word meanings"
    },
    {
      "term": "Homonymy",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "One form having unrelated meanings",
      "compressed_definition": "Same form, different meanings"
    },
    {
      "term": "Semantic features",
      "primary_field": "Linguistics",
      "subfield": "Semantics",
      "definition": "Minimal components that distinguish word meanings",
      "compressed_definition": "Minimal meaning components"
    },
    {
      "term": "Feature-based definition",
      "primary_field": "Linguistics",
      "subfield": "Semantics",
      "definition": "Defining meaning via a set of semantic features",
      "compressed_definition": "Definition by semantic features"
    },
    {
      "term": "Collocation",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "Preferred co-occurrence of words in natural language",
      "compressed_definition": "Common word co-occurrence"
    },
    {
      "term": "Register",
      "primary_field": "Linguistics",
      "subfield": "Sociolinguistics",
      "definition": "Variation in language style depending on context and formality",
      "compressed_definition": "Language style variation"
    },
    {
      "term": "Register mismatch",
      "primary_field": "Linguistics",
      "subfield": "Sociolinguistics",
      "definition": "Inappropriate alignment between expected and actual register",
      "compressed_definition": "Mismatched language style"
    },
    {
      "term": "Semantic change",
      "primary_field": "Linguistics",
      "subfield": "Historical semantics",
      "definition": "Change in meaning of words over time",
      "compressed_definition": "Meaning change over time"
    },
    {
      "term": "Semantic shift",
      "primary_field": "Linguistics",
      "subfield": "Historical semantics",
      "definition": "Compact term for general change in word meaning",
      "compressed_definition": "Word meaning change"
    },
    {
      "term": "Semantic weakening",
      "primary_field": "Linguistics",
      "subfield": "Historical semantics",
      "definition": "Loss of semantic strength or specificity",
      "compressed_definition": "Meaning becomes weaker"
    },
    {
      "term": "Semantic drift",
      "primary_field": "Linguistics",
      "subfield": "Historical semantics",
      "definition": "Gradual shift in word meaning over time",
      "compressed_definition": "Slow meaning shift"
    },
    {
      "term": "Pragmatic drift",
      "primary_field": "Linguistics",
      "subfield": "Pragmatics",
      "definition": "Context-driven change in language meaning",
      "compressed_definition": "Contextual meaning shift"
    },
    {
      "term": "Lexicography",
      "primary_field": "Applied linguistics",
      "subfield": null,
      "definition": "The practice of compiling, writing, and editing dictionaries",
      "compressed_definition": "Dictionary compilation"
    },
    {
      "term": "Semasiology",
      "primary_field": "Linguistics",
      "subfield": "Semantics",
      "definition": "Study of meaning from word form to sense",
      "compressed_definition": "Word meaning study"
    },
    {
      "term": "Distributional semantics",
      "primary_field": "Computational linguistics",
      "subfield": "NLP",
      "definition": "Modeling meaning based on patterns of word usage in corpora",
      "compressed_definition": "Meaning from word usage"
    },
    {
      "term": "Metalinguistic usage",
      "primary_field": "Linguistics",
      "subfield": "Pragmatics",
      "definition": "Using language to describe or analyze language itself",
      "compressed_definition": "Language about language"
    },
    {
      "term": "Epistemic status",
      "primary_field": "Philosophy of language",
      "subfield": "Semantics",
      "definition": "Degree of certainty or justification implied by language",
      "compressed_definition": "Degree of certainty"
    }
  ]
}
