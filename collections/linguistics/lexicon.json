{
  "metadata": {
    "name": "Lexical Semantics & Lexicon",
    "description": "Entries focused on lexical meaning, synonyms, polysemy, and word relations.",
    "version": 1
  },
  "entries": [
    {
      "term": "Lexical semantics",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "Study of individual word meanings, sense distinctions, and relations among words",
      "compressed_definition": "Study of word meanings"
    },
    {
      "term": "Sense",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "A distinct meaning or interpretation associated with a particular word form",
      "compressed_definition": "Specific word meaning"
    },
    {
      "term": "Synonymy",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "The relation between words that share similar meaning",
      "compressed_definition": "Similarity between word meanings"
    },
    {
      "term": "Near-synonymy",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "Partial synonymy where words differ in context, connotation, or usage restrictions",
      "compressed_definition": "Partially similar word meanings"
    },
    {
      "term": "Synonymic differentiation",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "Analysis of fine distinctions among near-synonyms to clarify meaning",
      "compressed_definition": "Distinguishing similar word meanings"
    },
    {
      "term": "Polysemy",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "Single word having multiple related meanings",
      "compressed_definition": "Multiple related word meanings"
    },
    {
      "term": "Homonymy",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "Same word form having unrelated meanings",
      "compressed_definition": "Same form, different meanings"
    },
    {
      "term": "Selectional restrictions",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "Constraints on which words can combine meaningfully in a sentence",
      "compressed_definition": "Compatibility rules for words"
    },
    {
      "term": "Collocation",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "Preferred co-occurrence of words in natural language",
      "compressed_definition": "Common word co-occurrence"
    },
    {
      "term": "Lexeme",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "An abstract unit of lexical meaning, which may have different surface word forms (inflected forms)",
      "compressed_definition": "Abstract unit of lexical meaning"
    },
    {
      "term": "Lemma",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "The canonical dictionary form of a lexeme (e.g., 'run' is lemma for 'runs', 'ran')",
      "compressed_definition": "Canonical dictionary form"
    },
    {
      "term": "Lexical gap",
      "primary_field": "Linguistics",
      "subfield": "Lexical semantics",
      "definition": "A concept for which a language lacks a conventional lexical item",
      "compressed_definition": "Missing lexical item for a concept"
    }
  ]
}